@model IEnumerable<FootBallStat.Match>

@{
    ViewData["Title"] = "Матчі";
}

<h1>Матчі @ViewBag.Championship.Name</h1>


<table class="table">
    <thead>
        <tr>
@*            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Championship)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Team1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Team2)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
@*            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Championship.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Team1.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Team2.Name)
            </td>
            @if (User.IsInRole("admin"))
            {
            <td>
                <a asp-controller="Matches" asp-action="Edit" asp-route-id="@item.Id"><button class="btn btn-success"> Змінити </button></a> 
                <a asp-controller="Matches" asp-action="Details" asp-route-id="@item.Id"><button class="btn btn-success"> Гравці </button></a> 
                <a asp-controller="Matches" asp-action="Delete" asp-route-id="@item.Id"><button class="btn btn-danger"> Видалити </button></a>
            </td>
            }
            else 
            {
                <td><a asp-controller="Matches" asp-action="Details" asp-route-id="@item.Id">Details</a></td>
            }
        </tr>
}
    </tbody>
</table>
<div>
    <a asp-action="Index"><button class="btn btn-primary"> Повернутися до чемпіонатів </button></a>
</div>