@model FootBallStat.PlayersInMatch

@{
    ViewData["Title"] = "Edit";
}

<h1>@Model.Player.Name в матчі</h1>

<h4>Змінюванні дані</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="PlayerId" class="control-label"></label>
                <select asp-for="PlayerId" class="form-control" asp-items="ViewBag.PlayerId"></select>
                <span asp-validation-for="PlayerId" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                <label asp-for="MatchId" class="control-label"></label>
                <select asp-for="MatchId" class="form-control" asp-items="ViewBag.MatchId"></select>
                <span asp-validation-for="MatchId" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <label asp-for="PlayerGoals" class="control-label"></label>
                <input asp-for="PlayerGoals" class="form-control" />
                <span asp-validation-for="PlayerGoals" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Зберегти зміни" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
     <div>
         <p class="text-danger">@ViewData["ErrorMessage"]</p>
     </div> 
<div>
    <a asp-action="Index"
    asp-route-id="@Model.MatchId"
    asp-route-team1id="@Model.Match.Team1Id"
    asp-route-team2id="@Model.Match.Team2Id"
    asp-route-championshipid="@Model.Match.ChampionshipId"
    asp-route-date="@Model.Match.Date"><button class="btn btn-success"> Повернутися до списку </button></a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
