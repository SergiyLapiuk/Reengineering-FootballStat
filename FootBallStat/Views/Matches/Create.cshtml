@model FootBallStat.Match

@{
    ViewData["Title"] = "Планування матчу";
}

<h1>Планування матчу</h1>

<h4>Матч</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Team1Id" class="control-label"></label>
                <select asp-for="Team1Id" class ="form-control" asp-items="ViewBag.Team1Id"></select>
            </div>
            <div class="form-group">
                <label asp-for="Team2Id" class="control-label"></label>
                <select asp-for="Team2Id" class ="form-control" asp-items="ViewBag.Team2Id"></select>
            </div>
            <div class="form-group">
                <label asp-for="ChampionshipId" class="control-label"></label>
                <select asp-for="ChampionshipId" class ="form-control" asp-items="ViewBag.ChampionshipId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Запланувати матч" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
         <p class="text-danger">@ViewData["ErrorMessage"]</p>
</div> 

<div>
    <a asp-action="Index"><button class="btn btn-success"> Повернутися до матчів </button></a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
